    <div class="row nav-container mx-auto">
      <div class="col-md-4 col-sm-12 col-xs-12">
        <div class="search-container">
          <form class="form-inline" action="/products/search" method="GET">
            <input
              class="search-input"
              type="search"
              placeholder="Search"
              name="search"
            />
          </form>
        </div>
